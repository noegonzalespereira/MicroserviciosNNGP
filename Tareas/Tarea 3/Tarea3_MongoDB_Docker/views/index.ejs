<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Agenda</title>
</head>
<body>
  <h1>Agenda</h1>

  <form method="get" action="/">
    <input type="text" name="nombres" placeholder="Buscar por nombres" value="<%= (typeof nombres !== 'undefined') ? nombres : '' %>" />
    <button type="submit">Buscar</button>
  </form>

  <p><a href="/users/new">Agregar nuevo contacto</a></p>

  <ul>
    <% users.forEach(user => { %>
      <li>
        <a href="/users/<%= user._id %>">
          <%= user.nombres %> <%= user.apellidos %>
        </a>
        &nbsp;(<a href="/users/<%= user._id %>/edit">Editar</a>)
        <form action="/users/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>

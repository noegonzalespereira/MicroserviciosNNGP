<!DOCTYPE html>
<html>
<head><title>Editar Contacto</title></head>
<body>
  <h1>Editar Contacto</h1>
  <form action="/users/<%= user._id %>?_method=PUT" method="POST">
    <input type="text" name="nombres" value="<%= user.nombres %>" required>
    <input type="text" name="apellidos" value="<%= user.apellidos %>" required>
    <input type="date" name="fecha_nacimiento" value="<%= user.fecha_nacimiento.toISOString().split('T')[0] %>" required>
    <input type="text" name="direccion" value="<%= user.direccion %>" required>
    <input type="text" name="celular" value="<%= user.celular %>" required>
    <input type="email" name="correo" value="<%= user.correo %>" required>
    <button type="submit">Actualizar</button>
  </form>
  <a href="/">Volver</a>
</body>
</html>
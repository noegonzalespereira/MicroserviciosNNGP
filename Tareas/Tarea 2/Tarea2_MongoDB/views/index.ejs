<!DOCTYPE html>
<html>
<head>
  <title>Agenda</title>
</head>
<body>
  <h1>Agenda</h1>
  <form method="get" action="/">
    <input type="text" name="nombres" placeholder="Buscar por nombres">
    <button type="submit">Buscar</button>
  </form>
  <a href="/users/new">Agregar nuevo contacto</a>
  <ul>
    <% users.forEach(user => { %>
      <li>
        <a href="/users/<%= user._id %>"><%= user.nombres %> <%= user.apellidos %></a>
        (<a href="/users/<%= user._id %>/edit">Editar</a>)
        <form action="/users/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>